@model CookBook_CSharp.Models.Recipe

  <div class="card">
      <h2>Add New Recipe</h2>
      <form method="post" action="/Recipe/Create">
          @Html.AntiForgeryToken()

          <div class="form-group">
              <label for="Title">Recipe Name</label>
              <input type="text" name="Title" id="Title" required />
          </div>

          <div class="form-group">
              <label for="Category">Category</label>
              <select name="Category" id="Category">
                  <option value="Breakfast">Breakfast</option>
                  <option value="Lunch">Lunch</option>
                  <option value="Dinner">Dinner</option>
                  <option value="Dessert">Dessert</option>
                  <option value="Snack">Snack</option>
              </select>
          </div>

          <div class="form-group">
              <label for="ingredientsString">Ingredients (comma 
  separated)</label>
              <input type="text" name="ingredientsString" 
  id="ingredientsString"
                     placeholder="e.g. flour, eggs, milk" />
          </div>

          <div class="form-group">
              <label for="Instructions">Instructions</label>
              <textarea name="Instructions" id="Instructions" 
  rows="6"></textarea>
          </div>

          <div class="form-group">
              <label for="Rating">Rating (0-5)</label>
              <input type="number" name="Rating" id="Rating" min="0" max="5"
   step="0.1" />
          </div>

          <div class="button-group">
              <button type="submit" class="btn">Add Recipe</button>
              <a href="/Recipe" class="btn" style="background: #d3d3d3; 
  color: #333;">Cancel</a>
          </div>
      </form>
  </div>
