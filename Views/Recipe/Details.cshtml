@model CookBook_Dynamic_Final.Models.Recipe

  <div class="card">
      <div style="display: flex; justify-content: space-between; 
  align-items: center; margin-bottom: 1rem;">
          <h2>@Model.Title</h2>
          <div style="display: flex; gap: 10px;">
              @if (Model.IsFavorite)
              {
                  <span style="font-size: 2rem;" title="Favorite">⭐</span>
              }
              @if (Model.IsTried)
              {
                  <span style="font-size: 2rem;" title="Tried">✅</span>
              }
          </div>
      </div>

      <div style="background: var(--cream); padding: 1rem; border-radius: 
  8px; margin-bottom: 1.5rem;">
          <p><strong>Category:</strong> @(Model.Category ?? 
  "Uncategorized")</p>
          <p><strong>Rating:</strong> @(Model.Rating?.ToString("0.0") ?? "No rating") / 5.0</p>
          <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
          @if (Model.LastCookedDate.HasValue)
          {
              <p><strong>Last Cooked:</strong> 
  @Model.LastCookedDate.Value.ToString("MMM dd, yyyy")</p>
          }
      </div>

      @if (Model.Ingredients != null && Model.Ingredients.Any())
      {
          <div style="margin-bottom: 1.5rem;">
              <h3 style="color: var(--primary-orange); border-bottom: 2px 
  solid var(--secondary-orange); padding-bottom: 0.5rem;">Ingredients</h3>
              <ul style="list-style-type: disc; padding-left: 20px; 
  margin-top: 1rem;">
                  @foreach (var ingredient in Model.Ingredients)
                  {
                      <li style="margin-bottom: 
  0.5rem;">@ingredient.Name</li>
                  }
              </ul>
          </div>
      }

      @if (!string.IsNullOrWhiteSpace(Model.Instructions))
      {
          <div style="margin-bottom: 1.5rem;">
              <h3 style="color: var(--primary-orange); border-bottom: 2px 
  solid var(--secondary-orange); padding-bottom: 0.5rem;">Instructions</h3>
              <p style="margin-top: 1rem; line-height: 1.8; white-space: 
  pre-line;">@Model.Instructions</p>
          </div>
      }

      <div class="button-group">
          <a href="/Recipe/Edit/@Model.Id" class="btn" style="background: 
  #a3c9f1; color: #333;">Edit Recipe</a>
          <a href="/Recipe" class="btn" style="background: #d3d3d3; color: 
  #333;">Back to Recipes</a>
          <form method="post" action="/Recipe/Delete/@Model.Id" 
  style="display: inline;">
              @Html.AntiForgeryToken()
              <button type="submit" class="btn" style="background: #ffb3b3; 
  color: #333;"
                      onclick="return confirm('Are you sure you want to delete this recipe?')">Delete Recipe</button>
          </form>
      </div>
  </div>
